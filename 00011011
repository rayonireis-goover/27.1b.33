    <h2>Testar FTP</h2>

    <input type="text" id="ftp" placeholder="ftp.seuservidor.com">

    <button onclick="testarFTP()">Ping FTP</button>

    <div id="resultado"></div>

    <script>
        async function testarFTP() {
            const host = document.getElementById("ftp").value;
            document.getElementById("resultado").textContent = "Testando...";

            const resp = await fetch("{{ url_for('testar_ftp') }}?host=" + encodeURIComponent(host));
            const texto = await resp.text();

            document.getElementById("resultado").textContent = texto;
        }
    </script>

